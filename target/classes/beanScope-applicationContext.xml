<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Define your beans here -->
    <bean id="myLoggerConfig" class="me.thijmenl98.MyLoggerConfig" init-method="initLogger">
        <property name="rootLoggerLevel" value="ALL"/>
        <property name="printedLoggerLevel" value="ALL"/>
    </bean>

    <bean id="hFortuneService" class="me.thijmenl98.FortuneServices.HappyFortuneService">
    </bean>

    <bean id="myCoach"
          class="me.thijmenl98.Coaches.FootballCoach"
          scope="prototype">
        <constructor-arg ref="hFortuneService"/>
    </bean>

</beans>
